{
  "name": "youtube-mp3-api",
  "version": "1.0.0",
  "type": "module",
  "description": "A robust Express.js API for extracting audio from YouTube videos and converting to MP3",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "echo 'No tests specified'",
    "postinstall": "apt-get update && apt-get install -y ffmpeg || echo 'FFmpeg installation skipped (not on Linux)'",
    "docker:build": "docker build -t youtube-mp3-api .",
    "docker:run": "docker run -p 8080:8080 youtube-mp3-api",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "keywords": [
    "youtube",
    "mp3",
    "audio",
    "extraction",
    "api",
    "express"
  ],
  "author": "YT Player Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.16.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
